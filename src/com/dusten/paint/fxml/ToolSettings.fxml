<?xml version="1.0" encoding="UTF-8"?>

<?import com.dusten.paint.components.ImageButton?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<TabPane tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="com.dusten.paint.controllers.ToolSettingsController">

    <Tab text="All">
        <HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
            </padding>

            <Label text="Draw Weight (px): ">
                <HBox.margin>
                    <Insets left="5.0" right="15.0" />
                </HBox.margin>
            </Label>

            <Slider fx:id="lineWeight" majorTickUnit="2.0" max="30.0" minorTickCount="1" showTickLabels="true"
                    showTickMarks="true" snapToTicks="true" HBox.hgrow="ALWAYS">
                <tooltip>
                    <Tooltip text="Line draw weight for all tools" />
                </tooltip>
            </Slider>
        </HBox>
    </Tab>

    <Tab text="Bucket">
        <HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
            </padding>

            <Label text="Tolerance (%): ">
                <HBox.margin>
                    <Insets left="5.0" right="15.0" />
                </HBox.margin>
            </Label>

            <Slider fx:id="fillTolerance" majorTickUnit="5.0" max="25.0" minorTickCount="1" showTickLabels="true"
                    showTickMarks="true" snapToTicks="true" HBox.hgrow="ALWAYS">
                <tooltip>
                    <Tooltip text="Percent tolerance for color to be replaced" />
                </tooltip>
            </Slider>
        </HBox>
    </Tab>

    <Tab text="Draw">
        <HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Label text="Draw Mode: ">
                <HBox.margin>
                    <Insets right="8.0" top="12.0" />
                </HBox.margin>
            </Label>
            <ImageButton fx:id="pencilDrawMode" selected="true" prefHeight="50"
                         prefWidth="50" toolType="PENCIL" />

            <Label text="Fill Mode: ">
                <HBox.margin>
                    <Insets left="10.0" right="8.0" top="12.0" />
                </HBox.margin>
            </Label>
            <ImageButton fx:id="brushDrawMode" prefHeight="50" prefWidth="50"
                         toolType="PAINTBRUSH" />
        </HBox>
    </Tab>

    <Tab text="Rectangle">
        <HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Label text="Draw Mode: ">
                <HBox.margin>
                    <Insets right="8.0" top="12.0" />
                </HBox.margin>
            </Label>
            <ImageButton fx:id="rectangleDrawMode" selected="true" prefHeight="50"
                         prefWidth="50" toolType="RECTANGLE_DRAW" />

            <Label text="Fill Mode: ">
                <HBox.margin>
                    <Insets left="10.0" right="8.0" top="12.0" />
                </HBox.margin>
            </Label>
            <ImageButton fx:id="rectangleFillMode" prefHeight="50" prefWidth="50"
                         toolType="RECTANGLE_FILL" />
        </HBox>
    </Tab>

    <Tab text="Ellipse">
        <HBox>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Label text="Draw Mode: ">
                <HBox.margin>
                    <Insets right="8.0" top="12.0" />
                </HBox.margin>
            </Label>
            <ImageButton fx:id="ellipseDrawMode" selected="true" prefHeight="50"
                         prefWidth="50" toolType="ELLIPSE_DRAW" />

            <Label text="Fill Mode: ">
                <HBox.margin>
                    <Insets left="10.0" right="8.0" top="12.0" />
                </HBox.margin>
            </Label>
            <ImageButton fx:id="ellipseFillMode" prefHeight="50" prefWidth="50"
                         toolType="ELLIPSE_FILL" />
        </HBox>
    </Tab>

</TabPane>
