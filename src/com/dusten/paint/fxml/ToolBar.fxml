<?xml version="1.0" encoding="UTF-8"?>

<?import com.dusten.paint.components.ImageButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Tooltip?>
<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dusten.paint.controllers.ToolBarController">

   <Button maxHeight="20.0" minHeight="20.0" prefHeight="20.0"
           prefWidth="60.0" text="Settings" onAction="#showSettingsAction">
       <tooltip>
           <Tooltip text="Toolbar Settings" />
       </tooltip>
      <font>
         <Font size="10.0" />
      </font>
      <VBox.margin>
         <Insets left="5.0" top="5.0" />
      </VBox.margin>
   </Button>

    <ImageButton fx:id="paintBucketButton" prefHeight="50" prefWidth="50" toolType="BUCKET">
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
        </VBox.margin>
    </ImageButton>

    <ImageButton fx:id="lineToolButton" prefHeight="50" prefWidth="50" toolType="LINE">
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </ImageButton>

    <ColorPicker fx:id="colorPicker" onAction="#updateColorAction" prefHeight="50" prefWidth="50">
        <value>
            <Color />
        </value>
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </ColorPicker>

</VBox>
