<?xml version="1.0" encoding="UTF-8"?>

<?import com.dusten.paint.components.ImageButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dusten.paint.controllers.ToolBarController">

    <Button maxHeight="20.0" minHeight="20.0" onAction="#toggleSettingsAction" prefHeight="20.0" prefWidth="60.0" text="Settings">
        <tooltip>
            <Tooltip text="Toolbar Settings" />
        </tooltip>

        <font>
            <Font size="10.0" />
        </font>

        <VBox.margin>
            <Insets bottom="5.0" left="5.0" top="5.0" />
        </VBox.margin>
    </Button>

    <Separator prefWidth="50.0" />

    <ImageButton fx:id="selectToolButton" prefHeight="50" prefWidth="50" toolType="SELECT_AREA" settingsTab="Select">
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="3.0" />
        </VBox.margin>
    </ImageButton>

    <ImageButton fx:id="paintBucketButton" prefHeight="50" prefWidth="50" toolType="BUCKET" settingsTab="Bucket">
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </ImageButton>

    <ImageButton fx:id="eyeDropperButton" prefHeight="50" prefWidth="50" toolType="EYEDROPPER" settingsTab="All">
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </ImageButton>

    <ImageButton fx:id="textToolButton" prefHeight="50" prefWidth="50" toolType="TEXT" settingsTab="Text">
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </ImageButton>

    <ImageButton fx:id="drawToolButton" prefHeight="50" prefWidth="50" toolType="PENCIL" settingsTab="Draw">
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </ImageButton>

    <ImageButton fx:id="lineToolButton" prefHeight="50" prefWidth="50" toolType="LINE" settingsTab="Line">
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </ImageButton>

    <ImageButton fx:id="rectangleToolButton" prefHeight="50" prefWidth="50" toolType="RECTANGLE_DRAW" settingsTab="Rectangle">
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </ImageButton>

    <ImageButton fx:id="ellipseToolButton" prefHeight="50" prefWidth="50" toolType="ELLIPSE_DRAW" settingsTab="Ellipse">
        <VBox.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
        </VBox.margin>
    </ImageButton>

   <Separator prefWidth="50.0" />

    <ColorPicker fx:id="primaryColorPicker" onAction="#updatePrimaryColorAction" prefHeight="30.0" prefWidth="30.0" styleClass="colorChooser button">
        <value>
            <Color />
        </value>

        <VBox.margin>
            <Insets bottom="1.0" left="8.0" top="5.0" />
        </VBox.margin>
    </ColorPicker>

    <ColorPicker fx:id="secondaryColorPicker" onAction="#updateSecondaryColorAction" prefHeight="30.0" prefWidth="30.0" styleClass="colorChooser button">
        <VBox.margin>
            <Insets bottom="5.0" left="32.0" right="5.0" top="1.0" />
        </VBox.margin>
    </ColorPicker>

    <Button maxHeight="20.0" minHeight="20.0" onAction="#swapColorsAction" prefHeight="20.0" prefWidth="60.0" text="Swap">
        <tooltip>
            <Tooltip text="Swap colors" />
        </tooltip>

        <font>
            <Font size="10.0" />
        </font>

        <VBox.margin>
            <Insets bottom="5.0" left="5.0" />
        </VBox.margin>
    </Button>
</VBox>
